<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" 
	xmlns:qqLogo="com.brandqq.app.logo.components.*" creationComplete="init()" error="onAppError(event)">
	
	<mx:Style source="SystemSkin.css"/>
	<mx:Script source="LogoSys.as"/>
	
	<qqLogo:AppTopBar id="LogoSysTopBar"/>
	
	<mx:VBox width="100%" height="100%" verticalGap="0">
		<mx:ViewStack id="AppViewstack" width="100%" height="100%" 
			paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
			<!--图形分类视图-->
			<mx:HBox width="100%">
				<!--根分类视图-->
				<qqLogo:SymbolCateList id="LogoSymbolCateList" />
				<!--子分类视图-->
				<qqLogo:SymbolSubCateList id="LogoSymbolSubCateList" width="0" visible="false"/>
			</mx:HBox>
			
			<!--图形列表视图-->
			<qqLogo:SymbolsList id="LogoSymbolsList"/>
			
			<!--编辑视图-->
			<qqLogo:LogoEditor id="LogoEditorHBox"/>
			
			<!--保存视图-->
			<qqLogo:LogoSaver id="LogoSaverPanel" 
				newLogo="{LogoEditorHBox.LogoContainer.clearChildren();AppViewstack.selectedIndex=0;}"/>
			
		</mx:ViewStack>
	
		<mx:ControlBar width="100%" height="50" bottom="0" horizontalAlign="center">
			<mx:Button id="StepButton1" styleName="step1" toolTip="图形分类" click="onStepButtonsClick(1)"/>
			<mx:Button id="StepButton2" styleName="step2" enabled="false" toolTip="选择图形" click="onStepButtonsClick(2)"/>
			<mx:Button id="StepButton3" styleName="step3" enabled="false" toolTip="添加文字" click="onStepButtonsClick(3)"/>
			<mx:Button id="StepButton4" styleName="step4" enabled="false" toolTip="配色布局" click="onStepButtonsClick(4)"/>
			<mx:Button id="StepButton5" styleName="step5" enabled="false" toolTip="保存作品" click="onStepButtonsClick(5)"/>
		</mx:ControlBar>
	</mx:VBox>
</mx:Application>
