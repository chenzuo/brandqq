<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	initialize="init()" horizontalScrollPolicy="off" verticalScrollPolicy="off" verticalGap="5">
	<mx:Script>
		<![CDATA[
			import flash.geom.ColorTransform;
			import flash.events.MouseEvent;
			import com.brandqq.Resources.Requests;
			
			private function init():void
			{
				__name=data.@name;
				__frontUrl=Requests.cardTemplateThumbnailRequest(data.@guid,false);
				//this.toolTip=__frontUrl;
				if(data.@back=="1")
				{
					__bakcUrl=Requests.cardTemplateThumbnailRequest(data.@guid,true);
				}
				CardTempThumbnail.source=__frontUrl;
				CardTempName.text=__name;
			}
			
			private function onImageMouseEvent(e:MouseEvent):void
			{
				if(e.type==MouseEvent.MOUSE_OVER)
				{
					if(__bakcUrl!=null)
					{
						CardTempThumbnail.source=__bakcUrl;
					}
				}
				else
				{
					CardTempThumbnail.source=__frontUrl;
				}
			}
			
			private var __frontUrl:String;
			private var __bakcUrl:String;
			private var __name:String;
		]]>
	</mx:Script>
		<mx:Image id="CardTempThumbnail"
				width="335" height="210"
				scaleContent="false" styleName="thumbnailImage"
				horizontalAlign="center" 
				verticalAlign="middle" maintainAspectRatio="true"
				mouseOver="onImageMouseEvent(event)" mouseOut="onImageMouseEvent(event)" />
		<mx:Label id="CardTempName" color="#000000" fontWeight="bold" height="20"/>
</mx:VBox>
